{
	"name": "@diba1013/tscz",
	"version": "0.2.0",
	"description": "A small wrapper for esbuild rolllup libraries",
	"keywords": [
		"typescript",
		"esbuild",
		"rollup",
		"bundler"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/diba1013/tscz.git"
	},
	"author": "diba1013",
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"exports": {
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"bin": "./dist/cli.cjs",
	"types": "./dist/index.d.ts",
	"scripts": {
		"prepare": "husky install",
		"build": "pnpm exec tsx src/cli.build.ts && dist/cli.cjs && dist/cli.cjs",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint .",
		"lint:fix": "eslint --fix ."
	},
	"peerDependencies": {
		"typescript": "4.x"
	},
	"dependencies": {
		"cac": "^6.7.14",
		"chokidar": "^3.5.3",
		"esbuild": "^0.18.11",
		"esbuild-plugin-alias": "^0.2.1",
		"picocolors": "^1.0.0",
		"rollup": "^3.26.0",
		"rollup-plugin-dts": "^5.3.0",
		"tinypool": "^0.6.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@diba1013/eslint-config": "^0.6.4",
		"@diba1013/prettier-config": "^0.6.4",
		"@diba1013/tscz": "link:.",
		"@types/node": "^20.3.3",
		"@vitest/coverage-v8": "^0.32.2",
		"eslint": "^8.44.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.1",
		"tsx": "^3.12.7",
		"typescript": "^5.1",
		"vite": "^4.3.9",
		"vitest": "^0.32.2"
	}
}
